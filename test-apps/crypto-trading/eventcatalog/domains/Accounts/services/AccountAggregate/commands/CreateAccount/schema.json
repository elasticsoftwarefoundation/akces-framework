{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateAccountCommand",
  "type": "object",
  "properties": {
    "userId": {
      "type": "string",
      "format": "uuid",
      "description": "The unique identifier for the user account."
    },
    "country": {
      "type": "string",
      "description": "The country code for the user's location."
    },
    "firstName": {
      "type": "string",
      "description": "The user's first name."
    },
    "lastName": {
      "type": "string",
      "description": "The user's last name."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "The user's email address."
    }
  },
  "required": ["userId", "country", "firstName", "lastName", "email"],
  "additionalProperties": false
}